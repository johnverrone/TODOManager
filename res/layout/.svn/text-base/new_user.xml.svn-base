    <EditText
        android:id="@+id/txtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" 
        android:hint="Name" android:layout_margin="3dp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:hint="Username" android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:inputType="textPassword" 
        android:hint="Password" android:layout_margin="3dp"/>


    <EditText
        android:id="@+id/txtPassword2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPassword"
        android:inputType="textPassword"
        android:hint="Repeat Password" android:layout_margin="3dp"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPassword2"
        android:inputType="textEmailAddress" 
        android:hint="Email" android:layout_margin="3dp"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCreate"        
        android:layout_centerHorizontal="true"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentLeft="true"
        android:text="Create" android:layout_marginTop="5dp"/>

</RelativeLayout>