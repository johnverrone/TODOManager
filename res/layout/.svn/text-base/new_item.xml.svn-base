<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp" >

   <TextView
        android:id="@+id/lblTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Item" 
        android:layout_margin="3dp" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal" android:padding="5dp">
        <requestFocus />
    </TextView>

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTitle"
        android:hint="Title" 
        android:layout_margin="3dp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:hint="Description" 
        android:layout_margin="3dp" 
        android:minLines="3"/>
    
    <LinearLayout
        android:id="@+id/layoutDateandtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Date"
            android:inputType="date" />

        <EditText
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Time"
            android:inputType="date" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDateandtime"
        android:hint="Location" 
        android:layout_margin="3dp"/>
    
    <Spinner
        android:id="@+id/spinCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLocation" android:layout_margin="3dp"/>
        
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDone"        
        android:layout_centerHorizontal="true"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinCategory"
        android:layout_marginTop="5dp"
        android:text="Done" />


    
</RelativeLayout>